# editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
indent_size = 4
trim_trailing_whitespace = false

# Ignore paths
[**/{vendor,node_modules,public/packs}**]
indent_style = ignore
indent_size = ignore
end_of_line = ignore
insert_final_newline = ignore
trim_trailing_whitespace = ignore

[*.{gif,jpeg,jpg,ico,png}]
indent_style = ignore
indent_size = ignore
end_of_line = ignore
insert_final_newline = ignore
trim_trailing_whitespace = ignore